<header class="border border-bottom-3">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <div class="col-2">
                <%= link_to root_path, class: "btn btn-light mx-3" do %>
                    <h1>
                        TOP<i class="fa-solid fa-house-chimney"></i>
                    </h1>
                <% end %>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="col-8, offset-2">
                <ul class="navbar-nav ml-auto">
                    <% if admin_signed_in? %>
                        <li class="nav-item">
                            Pictures
                        </li>
                        <li class="nav-item">
                            Users
                        </li>
                        <li class="nav-item dropdown">
                            Reviews
                        </li>
                        <li class="nav-item dropdown">
                            Tags
                        </li>
                        <li class="nav-item dropdown">
                            ログアウト
                        </li>
                    <% elsif user_signed_in? %>
                        <li class="nav-item dropdown">
                            <%= link_to new_post_image_path, class: "btn btn-light mx-3" do %>
                              <i class="fa-solid fa-camera"></i>投稿する
                            <% end %>
                        </li>
                        <li class="nav-item dropdown">
                            <%= link_to post_images_path, class: "btn btn-light mx-3" do %>
                              <i class="fa-solid fa-film"></i>投稿一覧
                            <% end %>
                        </li>
                        <li class="nav-item dropdown">
                            <%= link_to  users_path, class: "btn btn-light mx-3" do %>
                              <i class="fa-solid fa-users"></i>ユーザー一覧
                            <% end %>
                        </li>
                        <li class="nav-item dropdown">
                            <%= link_to user_path(current_user), class: "btn btn-light mx-3" do %>
                              <i class="fa-solid fa-user"></i>マイページ
                            <% end %>
                        </li>
                        <li class="nav-item dropdown">
                            <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-light mx-3" do %>
                              <i class="fa-solid fa-right-from-bracket"></i>ログアウト
                            <% end %>
                        </li>
                    <% else %>
                        <li class="nav-item dropdown">
                            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-light mx-3" %>
                        </li>
                        <li class="nav-item dropdown">
                            <%= link_to "ログイン", new_user_session_path, class: "btn btn-light mx-3" %>
                        </li>
                        <li class="nav-item dropdown">
                            <%= link_to "ゲストログイン(閲覧用)", users_guest_sign_in_path, method: :post, class: "btn btn-light mx-3" %>
                        </li>
                    <% end %>
                </ul>
                <div>
                    <%= render "layouts/search_form" %>
                </div>
            </div>
        </div>
    </nav>
</header>