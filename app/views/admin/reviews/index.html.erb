<div class="container">
    <h2 class="text-center p-5"><i class="fa-solid fa-comment-slash"></i>ユーザーコメント管理</h2>

    <table class="table text-center">
        <thead class="table-success">
            <tr>
                <th><i class="fa-solid fa-user"></i>コメントユーザー</th>
                <th><i class="fa-solid fa-comments"></i>コメント内容</th>
                <th><i class="fa-solid fa-clock"></i>コメント日</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @post_comments.each do |post_comment| %>
              <tr>
                  <td><%= link_to @users.find(post_comment.user_id).name, admin_user_path(post_comment.user_id) %></td>
                  <td><%= post_comment.comment %></td>
                  <td><%= post_comment.created_at.strftime('%Y%m%d') %></td>
                  <td><%= link_to "コメントを削除", admin_review_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-danger" %></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate @post_comments %>
</div>