<% if post_image.favorited_by?(current_user) %>
    <%= link_to post_image_favorite_path(post_image), method: :delete, remote: true, data: {"turbolinks" => false}, id: "favorite_buttons_#{post_image.id}" do %>
        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= post_image.favorites.count %> いいね
    <% end %>
<% else %>
    <%= link_to post_image_favorite_path(post_image), method: :post, remote: true, data: {"turbolinks" => false}, id: "favorite_buttons_#{post_image.id}" do %>
        ♡<%= post_image.favorites.count %> いいね
    <% end %>
<% end %>