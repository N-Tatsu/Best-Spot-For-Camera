<div class="container-fluid vh-100">
    <div class="mx-auto p-3" style="width: 600px;">
        <h1>ユーザーログイン</h1>
        <% if flash[:danger] %>
            <p class="text-red"><%= flash[:danger] %></p>
        <% end %>

        <div class="mt-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <table class="table">
                <tbody>
                    <tr>
                       <td><%= f.label :メールアドレス %></td>
                       <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                    </tr>
                    <tr>
                       <td><%= f.label :パスワード %></td>
                       <td><%= f.password_field :password, autocomplete: "current-password" %></td>
                    </tr>
                    <% if devise_mapping.rememberable? %>
                    <tr>
                        <td></td>
                        <td><%= f.check_box :remember_me %><%= f.label :ログイン情報を保存する %></td>
                    </tr>
                    <% end %>
                    <tr>
                       <td><%= render "public/shared/links" %></td>
                       <td><%= f.submit "ログイン" %></td>
                    </tr>
                </tbody>
            </table>
        <% end %>
        </div>
    </div>
</div>